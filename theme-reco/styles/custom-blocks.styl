.custom-block
  .custom-block-title, .title
    font-weight 600
    font-size 1.1rem
    margin-bottom -0.4rem
    padding-top 0.4rem

  &.tip, &.warning, &.danger
    padding .1rem 1.5rem 0.5rem 2rem
    border-width 2px
    border-style solid
    margin 1rem 0
    border-radius 0.4rem

  &.tip
    border-color rgba(97, 106, 229, 1)
    background-color rgba(97, 106, 229, 0.1)
    .custom-block-title, .title
      color rgba(97, 106, 229, 1)
      &::before {
        font-family: "Font Awesome 6 Free";
        content: "\f4ad";
        padding-right: .5rem;
      }
    color darken(rgba(131, 141, 210, 1), 20)

  &.warning
    background-color rgba(230, 162, 60, 0.1)
    border-color rgba(230, 162, 60, 1)
    .custom-block-title, .title
       color rgba(230, 162, 60, 1)   
       &::before {
         font-family: "Font Awesome 6 Free";
         content: "\f06a";
         padding-right: .5rem;
       }
    color darken(rgba(230, 162, 60, 1), 20)

  &.danger
    border-color rgba(245, 108, 108, 1)
    background-color rgba(245, 108, 108, .1)
    .custom-block-title, .title
       color rgba(245, 108, 108, 1)
       &::before {
         font-family: "Font Awesome 6 Free";
         content: "\f057";
         padding-right: .5rem;
       }
    color darken(rgba(245, 108, 108, 1), 40)

  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right
  &.theorem
    margin 1rem 0
    padding .1rem 1.5rem
    border-radius 0.4rem
    background-color var(--code-color)
    .title
      font-weight bold

  &.details
    display block
    position relative
    border-radius 2px
    margin 1em 0
    padding 1rem
    background-color var(--code-color)
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
